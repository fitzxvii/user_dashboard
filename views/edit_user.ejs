<%- include('./partials/header'); %> 
<div class="container">
    <h1>Edit User #<%= data[0].id %> </h1>
<%  if(error_message.length != 0) {     %>
        <div class="alert alert-danger" role="alert">
        <span class="sr-only">Error:</span>               
<%      for(let i=0; i<error_message.length; i++) {    %>
            <p>  <%= error_message[i] %> </p>  
<%      }   %> 
        </div>
<%  }       %>
<%  if(success_message.length != 0) {     %>
    <div class="alert alert-success" role="alert">
    <span class="sr-only">Success:</span>               
<%      for(let i=0; i<success_message.length; i++) {    %>
        <p>  <%= success_message[i] %> </p>  
<%      }   %> 
    </div>
<%  }       %>  
    <div class="row">
        <form role="form" class="col-md-4 multiple" action="/edit_user/<%= data[0].id %>" method="post">
            <legend>Edit Information</legend>
            <div class="form-group">
                <label for="email">Email Address:</label>
                <input class="form-control" type="text" name="email" value="<%= data[0].email %>">
            </div>
            <div class="form-group">
                <label for="first_name">First Name:</label>
                <input class="form-control" type="text" name="first_name" value="<%= data[0].first_name %>">
            </div>
            <div class="form-group">
                <label for="last_name">Last Name:</label>
                <input class="form-control" type="text" name="last_name" value="<%= data[0].last_name %>">
            </div>
            <div class="form-group">
                <label for="user_level">User Level:</label>
                <select class="form-control" name="user_level">
                    <option value="<%= data[0].user_level %>"> <%= data[0].user_level %> </option>
<%                  if(data[0].user_level == "Admin") { %>  
                        <option value="User"> User </option>
<%                  }
